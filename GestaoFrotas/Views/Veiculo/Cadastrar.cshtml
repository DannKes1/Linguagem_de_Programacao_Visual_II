@using GestaoFrotas.Models.Enums
@model GestaoFrotas.Models.VeiculoViewModel

@{
    ViewData["Title"] = "Cadastro de Veículo";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Cadastrar" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Renavam" class="control-label"></label>
                <input asp-for="Renavam" class="form-control" />
                <span asp-validation-for="Renavam" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Chassi" class="control-label"></label>
                <input asp-for="Chassi" class="form-control" />
                <span asp-validation-for="Chassi" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="AnoFabricacao" class="control-label"></label>
                    <input asp-for="AnoFabricacao" class="form-control" />
                    <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="AnoModelo" class="control-label"></label>
                    <input asp-for="AnoModelo" class="form-control" />
                    <span asp-validation-for="AnoModelo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoCombustivel" class="control-label"></label>
                <select asp-for="TipoCombustivel" class="form-control" asp-items="Html.GetEnumSelectList<TipoCombustivel>()">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="TipoCombustivel" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ValorSeguro" class="control-label"></label>
                <input asp-for="ValorSeguro" class="form-control" />
                <span asp-validation-for="ValorSeguro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NomeProprietario" class="control-label"></label>
                <input asp-for="NomeProprietario" class="form-control" />
                <span asp-validation-for="NomeProprietario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar Veículo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}