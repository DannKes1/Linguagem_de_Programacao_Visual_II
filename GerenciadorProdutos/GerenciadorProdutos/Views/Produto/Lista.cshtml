
@model IEnumerable<GerenciadorProdutos.ViewModels.ProdutoListagemItemViewModel>

@{
    ViewData["Title"] = "Lista de Produtos";
    var categoriaAtual = Context.Request.Query["categoria"];
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between mb-3">
    <div>
        <strong>Filtrar por Categoria:</strong>
        <a asp-action="Lista" asp-route-ordenarPor="@Context.Request.Query["ordenarPor"]" class="btn btn-sm btn-outline-secondary @(string.IsNullOrEmpty(categoriaAtual) ? "active" : "")">Todos</a>
        @foreach (var categoria in ViewBag.Categorias)
        {
            <a asp-action="Lista" asp-route-categoria="@categoria" asp-route-ordenarPor="@Context.Request.Query["ordenarPor"]" class="btn btn-sm btn-outline-primary @(categoria == categoriaAtual ? "active" : "")">@categoria</a>
        }
    </div>

    <div>
        <strong>Ordenar por:</strong>
        <a asp-action="Lista" asp-route-categoria="@categoriaAtual" asp-route-ordenarPor="preco_asc" class="btn btn-sm btn-link">Preço (Menor)</a>
        <a asp-action="Lista" asp-route-categoria="@categoriaAtual" asp-route-ordenarPor="preco_desc" class="btn btn-sm btn-link">Preço (Maior)</a>
        <a asp-action="Lista" asp-route-categoria="@categoriaAtual" asp-route-ordenarPor="nome" class="btn btn-sm btn-link">Nome</a>
    </div>
</div>


<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Categoria</th>
            <th>Status</th>
            <th>Badge</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.PrecoFormatado</td>
                <td>@item.Categoria</td>
                <td>
                    <span class="badge @(item.Status == "Ativo" ? "bg-success" : "bg-danger")">
                        @item.Status
                    </span>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Badge))
                    {
                        <span class="badge bg-warning text-dark">@item.Badge</span>
                    }
                </td>
                <td>@item.TagsExibicao</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>